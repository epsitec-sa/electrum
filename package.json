{
  "name": "electrum",
  "version": "2.18.5",
  "description": "Electrum simplifies framework-agnostic declaration of React components.",
  "main": "lib/index.js",
  "scripts": {
    "compile": "rimraf ./lib && babel --quiet --out-dir lib src",
    "regen": "electrum-require-components --wrap --crlf ./src exp .component.js all-components.js",
    "prepublish": "require-self && npm run regen && npm run compile",
    "test": "npm run compile && mocha --harmony lib/test/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epsitec-sa/electrum.git"
  },
  "keywords": [
    "React"
  ],
  "author": "Epsitec SA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epsitec-sa/electrum/issues"
  },
  "homepage": "https://github.com/epsitec-sa/electrum",
  "dependencies": {
    "electrum-events": "^1.3.0",
    "electrum-field": "^1.3.0",
    "electrum-store": "^1.7.0",
    "electrum-theme": "^1.6.0",
    "electrum-utils": "^1.5.0",
    "radium": "^0.16.6",
    "react": "^0.14.7",
    "react-addons-shallow-compare": "^0.14.7",
    "react-addons-test-utils": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.1",
    "babel-plugin-transform-class-properties": "^6.5.0",
    "babel-plugin-transform-decorators": "^6.5.0",
    "babel-plugin-transform-es2015-classes": "^6.5.0",
    "babel-plugin-transform-react-display-name": "^6.5.0",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-node5": "^10.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "electrum-require-components": "^1.4.0",
    "jsdom": "^8.0.2",
    "mai-chai": "^1.1.2",
    "mocha": "^2.4.5",
    "path": "^0.12.7",
    "require-self": "^0.1.0",
    "rimraf": "^2.5.1"
  }
}
