{
  "name": "electrum",
  "version": "2.20.0",
  "description": "Electrum simplifies framework-agnostic declaration of React components.",
  "main": "lib/index.js",
  "scripts": {
    "babel": "babel --quiet --out-dir lib src",
    "compile": "rimraf ./lib && require-self && npm run regen && npm run babel",
    "rebuild": "npm run regen && npm run babel",
    "prepublish": "npm run compile",
    "regen": "electrum-require-components --crlf --wrap ./src exp .component.js all-components.js",
    "test": "npm run compile && mocha --harmony lib/test/**/*.js",
    "watch": "chokidar \"src/**/*.js\" -i \"src/all-components.js\" -c \"npm run rebuild\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epsitec-sa/electrum.git"
  },
  "keywords": [
    "React"
  ],
  "author": "Epsitec SA",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epsitec-sa/electrum/issues"
  },
  "homepage": "https://github.com/epsitec-sa/electrum",
  "dependencies": {
    "electrum-events": "^1.3.0",
    "electrum-field": "^1.4.1",
    "electrum-require-components": "^1.4.1",
    "electrum-store": "^1.7.0",
    "electrum-theme": "^1.6.0",
    "electrum-utils": "^1.5.0",
    "radium": "^0.16.6",
    "react": "^0.14.7",
    "react-addons-shallow-compare": "^0.14.7",
    "react-addons-test-utils": "^0.14.7",
    "react-dom": "^0.14.7"
  },
  "devDependencies": {
    "babel-env": "^1.0.0",
    "chokidar-cli": "^1.2.0",
    "mai-chai": "^2.0.1",
    "require-self": "^0.1.0",
    "rimraf": "^2.5.2"
  }
}
